{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "lib",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "stripInternal": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strict": true
    },
    "exclude": [
        ".*",
        "_*",
        "node_modules"
    ]
}