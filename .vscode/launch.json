{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "测试",
            "type": "node",
            "request": "launch",
            "internalConsoleOptions": "openOnSessionStart",
            "program": "node_modules/mocha/bin/_mocha.js",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/lib/**/*.js"
            ],
            "smartStep": false
        },
        {
            "name": "启动",
            "type": "node",
            "request": "launch",
            "internalConsoleOptions": "openOnSessionStart",
            "program": "node_modules/digo/bin/digo.js",
            "cwd": "${workspaceRoot}/test",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/_build/**/*.js"
            ],
            "smartStep": false
        },
        {
            "name": "附加",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "restart": false,
            "sourceMaps": false
        },
        {
            "name": "附加到进程",
            "type": "node",
            "request": "attach",
            "processId": "${command.PickProcess}",
            "port": 5858,
            "sourceMaps": false
        }
    ]
}